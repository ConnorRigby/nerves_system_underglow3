#include <dt-bindings/interrupt-controller/irq.h>

/dts-v1/;

#include <arm/allwinner/sun8i-t113s.dtsi>

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>
#include <dt-bindings/pwm/pwm.h>

/ {
	model = "ConeRGB Underglow3";
	compatible = "allwinner,sun8i-t113s", "allwinner,sun8i";

	aliases {
		mmc0 = &mmc0;
		serial0 = &uart0;
		serial1 = &uart1;
		ethernet0 = &rtl8189ftv;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	/* board wide 5V supply directly from the USB-C socket */
	reg_vcc5v: regulator-5v {
		compatible = "regulator-fixed";
		regulator-name = "vcc-5v";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		regulator-always-on;
	};

	/* SY8008 DC/DC regulator on the board */
	reg_3v3: regulator-3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc-3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		vin-supply = <&reg_vcc5v>;
	};

	/* SY8008 DC/DC regulator on the board, also supplying VDD-SYS */
	reg_vcc_core: regulator-core {
		compatible = "regulator-fixed";
		regulator-name = "vcc-core";
		regulator-min-microvolt = <880000>;
		regulator-max-microvolt = <880000>;
		vin-supply = <&reg_vcc5v>;
	};

	reg_usb: regulator-usb {
		compatible = "regulator-fixed";
		regulator-name = "vbus-5v";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		gpio = <&pio 1 4 GPIO_ACTIVE_LOW>; /* PB4 */
		startup-delay-us = <1000000>; /* 1 second */
		off-on-delay-us = <1000000>; /* 1 second */
		enable-active-low;
	};

	leds {
		compatible = "gpio-leds";

		led-0 {
			color = <LED_COLOR_ID_BLUE>;
			function = LED_FUNCTION_STATUS;
			gpios = <&pio 3 22 GPIO_ACTIVE_LOW>; /* PD22 */
		};
	};

    led-controller@0 {
        compatible = "pwm-leds-multicolor";
		pinctrl-0 = <&pwm1_pd17_pins>, <&pwm2_pd18_pins>, <&pwm3_pd19_pins>;
		pinctrl-names = "default";
		multi-led {
			color = <LED_COLOR_ID_RGB>;
            function = LED_FUNCTION_INDICATOR;
            max-brightness = <100000>;
			label = "underglow:0";
			led-red {
				color = <LED_COLOR_ID_RED>;
				pwms = <&pwm 1 100000 0>;
				max-brightness = <100000>;
			};
			led-green {
				color = <LED_COLOR_ID_GREEN>;
				pwms = <&pwm 2 100000 0>;
				max-brightness = <100000>;
			};
			led-glue {
				color = <LED_COLOR_ID_BLUE>;
				pwms = <&pwm 3 100000 0>;
				max-brightness = <100000>;
			};
		};
    };

    led-controller@1 {
        compatible = "pwm-leds-multicolor";
		pinctrl-0 = <&pwm4_pd20_pins>, <&pwm6_pd9_pins>, <&pwm0_pd16_pins>;
		pinctrl-names = "default";
		multi-led {
			color = <LED_COLOR_ID_RGB>;
            function = LED_FUNCTION_INDICATOR;
            max-brightness = <100000>;
			label = "underglow:1";
			led-red {
				color = <LED_COLOR_ID_RED>;
				pwms = <&pwm 4 100000 0>;
				max-brightness = <100000>;
			};
			led-green {
				color = <LED_COLOR_ID_GREEN>;
				pwms = <&pwm 6 100000 0>;
				max-brightness = <100000>;
			};
			led-glue {
				color = <LED_COLOR_ID_BLUE>;
				pwms = <&pwm 0 100000 0>;
				max-brightness = <100000>;
			};
		};
    };

	buttons {
		compatible = "gpio-keys";
		autorepeat;

		button@1 {
			label = "User Input 1";
			linux,code = <KEY_A>;
			gpios = <&pio 3 15 0>; /* PD15 */
		};

		button@2 {
			label = "User Input 2";
			linux,code = <KEY_B>;
			gpios = <&pio 3 14 0>; /* PD14 */
		};
	};

	wifi_pwrseq: wifi-pwrseq {
		compatible = "mmc-pwrseq-simple";
		reset-gpios = <&pio 6 12 GPIO_ACTIVE_LOW>; /* PG12 */
		post-power-on-delay-ms = <200>;
	};
};

&dcxo {
	clock-frequency = <24000000>;
};

&cpu0 {
	cpu-supply = <&reg_vcc_core>;
	clock-frequency = <1200000000>;
};

&cpu1 {
	cpu-supply = <&reg_vcc_core>;
	clock-frequency = <1200000000>;
};

&wdt {
	status = "okay";
};

&pio {
	vcc-pb-supply = <&reg_3v3>;
	vcc-pc-supply = <&reg_3v3>;
	vcc-pd-supply = <&reg_3v3>;
	vcc-pe-supply = <&reg_3v3>;
	vcc-pf-supply = <&reg_3v3>;
	vcc-pg-supply = <&reg_3v3>;

	uart0_pe2_pins: uart0-pe2-pins {
		pins = "PE2", "PE3";
		function = "uart0";
	};

	i2c2_pe12_pins: i2c2-pe12-pins {
		pins = "PE12", "PE13";
		function = "i2c2";
	};

	pwm0_pd16_pins: pwm0-pd16-pins {
		pins = "PD16";
		function = "pwm0";
	};

	pwm1_pd17_pins: pwm1-pd16-pins {
		pins = "PD17";
		function = "pwm1";
	};

	pwm2_pd18_pins: pwm2-pd18-pins {
		pins = "PD18";
		function = "pwm2";
	};

	pwm3_pd19_pins: pwm2-pd19-pins {
		pins = "PD19";
		function = "pwm3";
	};

	pwm4_pd20_pins: pwm4-pd20-pins {
		pins = "PD20";
		function = "pwm4";
	};

	/omit-if-no-ref/
	pwm5_pd21_pins: pwm5-pd21-pins {
		pins = "PD21";
		function = "pwm5";
	};

	pwm6_pd9_pins: pwm6-pd9-pins {
		pins = "PD9";
		function = "pwm6";
	};

	/omit-if-no-ref/
	pwm7_pd22_pins: pwm7-pd22-pins {
		pins = "PD22";
		function = "pwm7";
	};

	ledc_pe5_pin: ledc-pe5-pin {
		pins = "PE5";
		function = "ledc";
	};

	spi0_cs0_pc_pin: spi0-cs0-pc-pin {
		pins = "PC3";
		function = "spi0";
	};
};

&pwm {
	status = "okay";
};

&ledc {
	pinctrl-0 = <&ledc_pe5_pin>;
	pinctrl-names = "default";
	status = "okay";
	allwinner,pixel-format = "grb";
	allwinner,t0h-ns = "320";
	allwinner,t0l-ns = "800";
	allwinner,t1h-ns = "840";
	allwinner,t1l-ns = "400";
	allwinner,treset-ns = "300000";
	label = "underglow:ledc";
};

&uart0 {
	pinctrl-0 = <&uart0_pe2_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&uart1 {
	uart-has-rtscts;
	pinctrl-0 = <&uart1_pg6_pins>, <&uart1_pg8_rts_cts_pins>;
	pinctrl-names = "default";
	status = "okay";

	bluetooth {
		compatible = "realtek,rtl8723bs-bt";
		device-wake-gpios = <&pio 6 13 GPIO_ACTIVE_HIGH>; /* PG13 */
		host-wake-gpios =  <&pio 6 14 GPIO_ACTIVE_HIGH>; /* PG14 */
		enable-gpios = <&pio 6 15 GPIO_ACTIVE_HIGH>; /* PG15 */
		max-speed = <115200>;
		// max-speed = <1500000>;
		status = "okay";
	};
};

&i2c2 {
	pinctrl-0 = <&i2c2_pe12_pins>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <62000>;
};

&mmc0 {
	pinctrl-0 = <&mmc0_pins>;
	pinctrl-names = "default";
	vmmc-supply = <&reg_3v3>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>;
	disable-wp;
	bus-width = <4>;
	status = "okay";
};

&mmc1 {
	pinctrl-0 = <&mmc1_pins>;
	pinctrl-names = "default";

	/* SDIO to WiFi module */
	vmmc-supply = <&reg_3v3>;
	mmc-pwrseq = <&wifi_pwrseq>;
	bus-width = <4>;
	non-removable;
	status = "okay";

	rtl8189ftv: wifi@1 {
		reg = <1>;
		interrupt-parent = <&pio>;
		interrupts = <6 10 IRQ_TYPE_LEVEL_LOW>; /* PG10 = WL_WAKE_AP */
		interrupt-names = "host-wake";
	};
};

&usb_otg {
	dr_mode = "peripheral";
	status = "okay";
};

&usbphy {
	usb1_vbus-supply = <&reg_usb>;
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&ohci1 {
	status = "okay";
};

&can0 {
	pinctrl-names = "default";
	pinctrl-0 = <&can0_pins>;
	status = "okay";
};

&spi0 {
	status = "disabled";
};

&mixer0 {
	status = "disabled";
};

&tcon_top {
	status = "disabled";
};

&tcon_lcd0 {
	status = "disabled";
};

&crypto {
	status = "okay";
};

#include "sun8i-t113-ledc.dtsi"
